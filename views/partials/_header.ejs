<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-dark">
    <a class="navbar-brand" href="/urls"><h2>TinyApp</h2></a>
    <button
      class="navbar-toggler"
      type="button"
      data-toggle="collapse"
      data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup"
      aria-expanded="false"
      aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls"><h5>My URLs</h5></a>
        <a class="nav-item nav-link" href="/urls_new"><h5>Create New URL</h5></a>
      </div>
    </div>
    <% if (username) { %>
      <p><h4 class="align-middle" style="color: white"><%= username %></h4></p>
    <div>
      <form class="form-inline" action="/logout" method="POST" style="display: table; margin: auto;">
        <input type="submit" value="Logout" class="btn btn-primary" style="margin: 10px"/>
        </form>
    </div>
    <% } else { %>
    <div>
      <form class="form-inline" action="/login" method="POST" style="display: table; margin: auto">
        <label for="username"></label>
        <input class="form-control" type="text" placeholder="Enter username" name="username" style="width: 200px; margin: 1em"/>
        <input type="submit" value="Login" class="btn btn-primary"/>
      </form>
    </div>
    <% } %>
  </nav>
</header>
